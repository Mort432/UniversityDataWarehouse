<UserControl x:Class="UniversityDataWarehouse.Apps.Wpf.Views.AssignmentsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             
             xmlns:liveCharts="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:viewModels="clr-namespace:UniversityDataWarehouse.Apps.Wpf.ViewModels"
             d:DataContext="{d:DesignInstance viewModels:AssignmentsViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             
             mc:Ignorable="d"
             >

    <mah:SplitView
        DisplayMode="Inline"
        IsPaneOpen="True">

        <mah:SplitView.Pane>
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel Margin="24">
                    <TextBlock
                        HorizontalAlignment="Center"
                        Text="Filters" />

                    <Label
                        Content="Module"
                        Margin="0,24,0,0" />

                    <ComboBox
                        mah:TextBoxHelper.ClearTextButton="True"
                        ItemsSource="{Binding ModuleDims, Mode=OneWay}"
                        SelectedItem="{Binding ModuleDim, Mode=TwoWay}" />
                </StackPanel>
            </ScrollViewer>
        </mah:SplitView.Pane>

        <Grid>
            <liveCharts:CartesianChart
                Margin="24"
                Series="{Binding SeriesCollection, Mode=OneWay}">

                <liveCharts:CartesianChart.AxisY>
                    <liveCharts:Axis Title="No Of Assignments" />
                </liveCharts:CartesianChart.AxisY>

                <liveCharts:CartesianChart.AxisX>
                    <liveCharts:Axis Title="Year">
                        <liveCharts:Axis.Separator>
                            <liveCharts:Separator Step="1" />
                        </liveCharts:Axis.Separator>
                    </liveCharts:Axis>
                </liveCharts:CartesianChart.AxisX>
            </liveCharts:CartesianChart>

        </Grid>
    </mah:SplitView>
    
</UserControl>
